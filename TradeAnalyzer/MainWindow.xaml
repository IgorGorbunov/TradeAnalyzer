<Window x:Class="TradeAnalyzer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <DockPanel LastChildFill="False" Margin="0" Grid.Column="2">
        <StatusBar Height="0" VerticalAlignment="Top" DockPanel.Dock="Bottom" Margin="0"/>
        <Menu Height="22" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0">
            <MenuItem x:Name="MiHelp" Header="Справка" Click="miHelp_Click"/>
        </Menu>
        <StackPanel Height="298" VerticalAlignment="Top" Width="100"/>
        <StackPanel Height="298" VerticalAlignment="Top" Width="100" DockPanel.Dock="Right"/>
        <Grid Height="298" VerticalAlignment="Top" DockPanel.Dock="Top" Margin="0">
            <Button x:Name="BCheck" Content="Выполнить проверку" HorizontalAlignment="Center" VerticalAlignment="Center" Width="134" Click="BCheck_Click"/>
        </Grid>
    </DockPanel>

</Window>
